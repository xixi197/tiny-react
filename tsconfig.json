{
  "compileOnSave": true,
  "include": ["./packages/**/*"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "./packages",
    "paths": {
      "hostConfig": ["./react-dom/src/hostConfig.ts"]
    }
  }
}
